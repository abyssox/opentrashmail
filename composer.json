{
  "name": "abyssox/opentrashmail",
  "description": "Self-hosted trashmail service",
  "type": "project",
  "require": {
    "php": ">=8.4",
    "ext-fileinfo": "*",
    "ext-ctype": "*",
    "nikic/fast-route": "^1.3",
    "fabianwennink/iconcaptcha": "^4.0.6"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "OpenTrashmail\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "bash tools/copy-iconcaptcha-assets.sh"
    ],
    "post-update-cmd": [
      "bash tools/copy-iconcaptcha-assets.sh"
    ]
  }
}
